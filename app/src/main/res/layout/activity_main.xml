<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/homePageFrameLayoutId"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <madbarsoft.com.computershortquestionforitjob.utility.TextView_Lato
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Complete Solution for Written and Viva Exam"
                    android:textColor="#ffff"
                    android:textSize="14dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold" />
                <madbarsoft.com.computershortquestionforitjob.utility.Textview_lato_thin
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="(Computer General Knowledge)"
                    android:textColor="@color/colorGray"
                    android:textSize="14dp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <madbarsoft.com.computershortquestionforitjob.utility.TextView_Lato
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textColor="@color/colorGray"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <madbarsoft.com.computershortquestionforitjob.utility.Textview_lato_thin
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Category"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />

                <madbarsoft.com.computershortquestionforitjob.utility.TextView_Lato
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="500 +"
                    android:textColor="@color/colorGray"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <madbarsoft.com.computershortquestionforitjob.utility.Textview_lato_thin
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Question"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <GridView
        android:id="@+id/homePageWithGridViewId"
        android:layout_below="@+id/homePageFrameLayoutId"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="14dp"
        android:numColumns="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="#04b4a8"
        android:dividerHeight="1dp"
        android:divider="#33ed0f0f">

    </GridView>
</RelativeLayout>